<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_redondo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreFav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/medula_one"
            android:text="Nombre:"
            android:textColor="#F2B077"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtDireccionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medula_one"
            android:text="Direccion:"
            android:textColor="#F2B077"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtPoblacionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medula_one"
            android:text="Poblacion:"
            android:textColor="#F2B077"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtPrecioL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medula_one"
            android:text="Precio:"
            android:textColor="#F2B077"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtTipocomidaL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medula_one"
            android:text="Tipo de comida:"
            android:textColor="#F2B077"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/imgBtnFavorito"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/favoritovacio"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</LinearLayout>